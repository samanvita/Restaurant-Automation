<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.androidhive.materialtabs.activity.Clear"
    tools:showIn="@layout/activity_clear">

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/table1"
        android:background="@drawable/image_green"
        android:layout_below="@+id/table2"
        android:layout_alignLeft="@+id/table8"
        android:layout_alignStart="@+id/table8" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/table2"
        android:background="@drawable/image_green"
        android:layout_alignTop="@+id/table5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/table3"
        android:background="@drawable/image_green"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/table2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/table4"
        android:background="@drawable/image_green"
        android:layout_below="@+id/table3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/table5"
        android:background="@drawable/image_green"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/table6"
        android:layout_alignStart="@+id/table6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/table6"
        android:background="@drawable/image_green"
        android:layout_alignTop="@+id/table3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/table8"
        android:background="@drawable/image_green"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/table7"
        android:background="@drawable/image_green"
        android:layout_alignTop="@+id/table4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/done"
        android:layout_marginTop="62dp"
        android:background="#bb2222"
        android:textColor="#ffffff"
        android:layout_below="@+id/table7"
        android:layout_toRightOf="@+id/table4"
        android:layout_toEndOf="@+id/table4" />

</RelativeLayout>
