<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.androidhive.materialtabs.activity.Customer"
    tools:showIn="@layout/activity_customer"
    >

    <android.support.v4.widget.DrawerLayout android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/drw" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/maincontent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAY BILL"
            android:id="@+id/done"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#FFFFFF"
            android:background="#bb2222"
            android:layout_below="@+id/viewmenu"
            android:layout_alignLeft="@+id/feedback"
            android:layout_alignStart="@+id/feedback" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEEDBACK"
            android:id="@+id/feedback"
            android:layout_gravity="right|top"
            android:background="#bb2222"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/imageView2"
            android:layout_toLeftOf="@+id/viewmenu"
            android:layout_toStartOf="@+id/viewmenu" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/zoozoo_customer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW MENU"
            android:id="@+id/viewmenu"
            android:background="#bb2222"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/feedback"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/swipeleft"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView2"
            android:layout_toLeftOf="@+id/done"
            android:layout_toStartOf="@+id/done" />

    </RelativeLayout>

    <ListView android:layout_height="match_parent" android:layout_width="150dp" android:id="@+id/drawerlist" android:background="#e5e5e5" android:layout_gravity="left"/>

</android.support.v4.widget.DrawerLayout>

</RelativeLayout>
