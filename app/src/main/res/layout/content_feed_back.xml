<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.samanvita.restaurantautomation.Feedback"
    tools:showIn="@layout/activity_feed_back">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/scrollView3"
        android:visibility="visible"
        android:clickable="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/feedback"
            android:autoText="false"
            android:nestedScrollingEnabled="true"
            android:textStyle="italic"
            android:width="400dp"
            android:visibility="visible"
            android:theme="@style/Widget.Design.TextInputLayout"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </ScrollView>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="SUBMIT"
        android:id="@+id/button_submit"
        android:background="#e13434"
        android:visibility="visible"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/cancelfeedback"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="CANCEL"
        android:id="@+id/cancelfeedback"
        android:background="#e13434"
        android:textColor="#ffffff"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/star4"
        android:layout_toRightOf="@+id/star3"
        android:layout_toEndOf="@+id/star3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_below="@+id/scrollView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/star1"
        android:background="@drawable/silver"
        android:src="@drawable/silver"
        android:scaleType="fitXY"
        android:focusable="false"
        android:layout_above="@+id/cancelfeedback"
        android:layout_toLeftOf="@+id/star2"
        android:layout_toStartOf="@+id/star2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/star2"
        android:background="@drawable/silver"
        android:scaleType="fitXY"
        android:src="@drawable/silver"
        android:layout_above="@+id/cancelfeedback"
        android:layout_toLeftOf="@+id/star3"
        android:layout_toStartOf="@+id/star3" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/star3"
        android:background="@drawable/silver"
        android:scaleType="fitXY"
        android:src="@drawable/silver"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/star4"
        android:layout_toStartOf="@+id/star4" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/star4"
        android:background="@drawable/silver"
        android:scaleType="fitXY"
        android:src="@drawable/silver"
        android:layout_alignTop="@+id/star3"
        android:layout_toLeftOf="@+id/star5"
        android:layout_toStartOf="@+id/star5" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/star5"
        android:background="@drawable/silver"
        android:scaleType="fitXY"
        android:src="@drawable/silver"
        android:layout_above="@+id/cancelfeedback"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Feedback here"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>