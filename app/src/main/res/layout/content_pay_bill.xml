<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.androidhive.materialtabs.activity.PayBill"
    tools:showIn="@layout/activity_pay_bill">

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/l">

    <ImageView android:layout_height="160dp" android:layout_width="160dp" android:id="@+id/imageView1"
        android:src="@drawable/dollar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_centerHorizontal="true" android:layout_marginTop="35dp" android:layout_below="@+id/imageView1" android:textColor="#030303" android:textAppearance="?android:attr/textAppearanceLarge" android:textAllCaps="true" android:text="Your Bill Amount"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rs."
            android:id="@+id/textView9"
            android:textColor="#030303"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/billtext"
            android:layout_toStartOf="@+id/billtext" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/billtext"
            android:textColor="#030303"
            android:textSize="25dp"
            android:text="270"
            android:layout_above="@+id/done"
            android:layout_alignRight="@+id/done"
            android:layout_alignEnd="@+id/done" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/done"
            android:textColor="#FFFFFF"
            android:background="#bb2222"
            android:text="DONE"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/ordermore"
            android:layout_alignStart="@+id/ordermore"
            android:layout_marginTop="43dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ORDER MORE"
            android:id="@+id/ordermore"
            android:layout_marginTop="41dp"
            android:textColor="#FFFFFF"
            android:background="#bb2222"
            android:layout_below="@+id/done"
            android:layout_alignRight="@+id/imageView1"
            android:layout_alignEnd="@+id/imageView1" />

    </RelativeLayout>

</LinearLayout>
